{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "MassTransit": "Information"
    },
    "Seq": {
      "Url": "http://localhost:5341"
    },
    "Serilog": {
      "MinimumLevel": {
        "Default": "Information"
      },
      "Enrich": [
        "FromLogContext",
        "WithEnvironmentName",
        "WithMachineName",
        "WithProcessId",
        "WithThreadId"
      ],
      "Properties": {
        "Application": "Yapplr.VideoProcessor"
      },
      "WriteTo": [
        {
          "Name": "Console",
          "Args": {
            "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
          }
        },
        {
          "Name": "File",
          "Args": {
            "path": "/app/logs/yapplr-video-processor-.log",
            "rollingInterval": "Day",
            "retainedFileCountLimit": 7,
            "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
          }
        },
        {
          "Name": "Seq",
          "Args": {
            "serverUrl": "http://localhost:5341"
          }
        }
      ]
    }
  },

  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/"
  },
  "VideoProcessing": {
    "InputPath": "/app/uploads/videos",
    "OutputPath": "/app/uploads/processed",
    "ThumbnailPath": "/app/uploads/thumbnails",
    "TempPath": "/app/uploads/temp",
    "MaxWidth": 1920,
    "MaxHeight": 1920,
    "TargetBitrate": 2000,
    "OutputFormat": "mp4",
    "VideoCodec": "libx264",
    "AudioCodec": "aac",
    "ThumbnailWidth": 320,
    "ThumbnailHeight": 240,
    "ThumbnailTimeSeconds": 1.0,

    "MaxDurationSeconds": 300,
    "DeleteOriginalAfterProcessing": true,
    "SupportedInputFormats": [
      "mp4", "avi", "mov", "mkv", "webm", "flv", "wmv", "m4v", "3gp", "ogv"
    ],
    "FallbackCodecs": {
      "Video": ["libx264", "libx265", "libvpx-vp9", "libvpx"],
      "Audio": ["aac", "libmp3lame", "libvorbis", "libopus"]
    }
  },
  "FFmpeg": {
    "BinaryPath": "/usr/bin/ffmpeg",
    "ProbePath": "/usr/bin/ffprobe",
    "WorkingDirectory": "/tmp"
  },
  "HandBrake": {
    "BinaryPath": "/usr/bin/HandBrakeCLI",
    "WorkingDirectory": "/tmp",
    "TimeoutSeconds": 300,
    "LogLevel": "error",
    "DefaultPreset": "Fast 1080p30",
    "QualityMode": "constant_quality",
    "ConstantQuality": 22.0,
    "EncoderPreset": "medium",
    "EncoderProfile": "baseline",
    "EncoderLevel": "3.1"
  }
}
