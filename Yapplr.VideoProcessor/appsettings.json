{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "MassTransit": "Information"
    }
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/"
  },
  "VideoProcessing": {
    "InputPath": "../uploads/videos",
    "OutputPath": "../uploads/processed",
    "ThumbnailPath": "../uploads/thumbnails",
    "TempPath": "../uploads/temp",
    "MaxWidth": 1920,
    "MaxHeight": 1080,
    "TargetBitrate": 2000,
    "OutputFormat": "mp4",
    "VideoCodec": "libx264",
    "AudioCodec": "aac",
    "ThumbnailWidth": 320,
    "ThumbnailHeight": 240,
    "ThumbnailTimeSeconds": 1.0,
    "MaxFileSizeBytes": 104857600,
    "MaxDurationSeconds": 300,
    "DeleteOriginalAfterProcessing": true
  },
  "FFmpeg": {
    "BinaryPath": "/usr/bin/ffmpeg",
    "WorkingDirectory": "/tmp"
  }
}
