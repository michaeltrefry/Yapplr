{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "MassTransit": "Information"
    },
    "Loki": {
      "Url": "http://localhost:3100"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "MassTransit": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "Yapplr.VideoProcessor"
    }
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/"
  },
  "VideoProcessing": {
    "InputPath": "/app/uploads/videos",
    "OutputPath": "/app/uploads/processed",
    "ThumbnailPath": "/app/uploads/thumbnails",
    "TempPath": "/app/uploads/temp",
    "MaxWidth": 1920,
    "MaxHeight": 1080,
    "TargetBitrate": 2000,
    "OutputFormat": "mp4",
    "VideoCodec": "libx264",
    "AudioCodec": "aac",
    "ThumbnailWidth": 320,
    "ThumbnailHeight": 240,
    "ThumbnailTimeSeconds": 1.0,
    "MaxFileSizeBytes": 104857600,
    "MaxDurationSeconds": 300,
    "DeleteOriginalAfterProcessing": true
  },
  "FFmpeg": {
    "BinaryPath": "/usr/bin/ffmpeg",
    "WorkingDirectory": "/tmp"
  }
}
