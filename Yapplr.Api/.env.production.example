# Production Environment Variables
# Copy this file to .env.production and fill in the actual values

# Database
ConnectionStrings__DefaultConnection=Host=your-db-host;Database=yapplr;Username=your-username;Password=your-password

# JWT
Jwt__Key=your-super-secret-jwt-key-at-least-32-characters-long
Jwt__Issuer=yapplr-api
Jwt__Audience=yapplr-frontend

# Firebase Configuration
Firebase__ProjectId=yapplr
Firebase__ServiceAccountKey="{}"

# CORS Configuration
Cors__AllowFrontend__AllowedOrigins__0=https://your-domain.com
Cors__AllowFrontend__AllowedOrigins__1=https://www.your-domain.com
Cors__AllowFrontend__AllowAnyHeader=true
Cors__AllowFrontend__AllowAnyMethod=true
Cors__AllowFrontend__AllowCredentials=true

Cors__AllowSignalR__AllowedOrigins__0=https://your-domain.com
Cors__AllowSignalR__AllowedOrigins__1=https://www.your-domain.com
Cors__AllowSignalR__AllowAnyHeader=true
Cors__AllowSignalR__AllowAnyMethod=true
Cors__AllowSignalR__AllowCredentials=true

# Disable AllowAll policy in production
Cors__AllowAll__AllowAnyOrigin=false
Cors__AllowAll__AllowAnyHeader=false
Cors__AllowAll__AllowAnyMethod=false
Cors__AllowAll__AllowCredentials=false

# Logging
Logging__LogLevel__Default=Information
Logging__LogLevel__Microsoft.AspNetCore=Warning
