{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=yapplr_db;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long",
    "Issuer": "Yapplr.Api",
    "Audience": "Yapplr.Client",
    "ExpirationInMinutes": 60
  },
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": "587",
    "Username": "your-email@gmail.com",
    "Password": "",
    "FromEmail": "your-email@gmail.com",
    "FromName": "Yapplr"
  },
  "AwsSesSettings": {
    "Region": "us-east-1",
    "FromEmail": "your-email@gmail.com",
    "FromName": "Yapplr",
    "AccessKey": "",
    "SecretKey": ""
  },
  "SendGridSettings": {
    "ApiKey": "",
    "FromEmail": "your-email@gmail.com",
    "FromName": "Yapplr"
  },
  "EmailProvider": "SendGrid",
  "NotificationProviders": {
    "Firebase": {
      "Enabled": true,
      "ProjectId": "yapplr-bd41a"
    },
    "SignalR": {
      "Enabled": true,
      "MaxConnectionsPerUser": 10,
      "MaxTotalConnections": 10000,
      "CleanupIntervalMinutes": 30,
      "InactivityThresholdHours": 1,
      "EnableDetailedErrors": false
    },
    "Expo": {
      "Enabled": true
    }
  },
  "ContentModeration": {
    "ServiceUrl": "http://content-moderation:8000",
    "Enabled": true,
    "RequireReviewThreshold": 0.5,
    "AutoHideThreshold": 0.8
  },
  "Cors": {
    "AllowFrontend": {
      "AllowedOrigins": [
        "https://yapplr.com",
        "https://www.yapplr.com",
        "https://app.yapplr.com",
        "https://stg.yapplr.com",
        "https://stg-api.yapplr.com"
      ],
      "AllowAnyHeader": true,
      "AllowAnyMethod": true,
      "AllowCredentials": true
    },
    "AllowSignalR": {
      "AllowedOrigins": [
        "https://yapplr.com",
        "https://www.yapplr.com",
        "https://app.yapplr.com",
        "https://stg.yapplr.com",
        "https://stg-api.yapplr.com"
      ],
      "AllowAnyHeader": true,
      "AllowAnyMethod": true,
      "AllowCredentials": true
    },
    "AllowAll": {
      "AllowAnyOrigin": true,
      "AllowAnyHeader": true,
      "AllowAnyMethod": true,
      "AllowCredentials": false
    }
  },
  "UserCache": {
    "ExpirationSeconds": 5,
    "MaxSize": 5000
  }
}
