{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Yapplr.Api.Middleware.LoggingContextMiddleware": "Warning",
      "Prometheus.HttpMetrics": "Warning",
      "Microsoft.AspNetCore.Hosting.Diagnostics": "Warning",
      "Microsoft.AspNetCore.Routing.EndpointMiddleware": "Warning",
      "Yapplr.Api.Services.InfluxAnalyticsService": "Warning",
      "Yapplr.Api.Services.Unified.NotificationProviderManager": "Warning",
      "Yapplr.Api.Hubs.NotificationHub": "Warning",
      "Yapplr.Api.Services.SignalRConnectionPool": "Warning",
      "Yapplr.Api.Services.AnalyticsService": "Warning"
    },
    "Seq": {
      "Url": "http://localhost:5341"
    },
    "Serilog": {
      "MinimumLevel": "Information",
      "WriteTo": [
        {
          "Name": "Console"
        },
        {
          "Name": "Seq",
          "Args": {
            "serverUrl": "http://localhost:5341"
          }
        }
      ]
    }
  },

  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=yapplr_db;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long",
    "Issuer": "Yapplr.Api",
    "Audience": "Yapplr.Client",
    "ExpirationInMinutes": 60
  },
  "SmtpSettings": {
    "Host": "smtp.gmail.com",
    "Port": "587",
    "Username": "your-email@gmail.com",
    "Password": "",
    "FromEmail": "your-email@gmail.com",
    "FromName": "Yapplr"
  },
  "AwsSesSettings": {
    "Region": "us-east-1",
    "FromEmail": "your-email@gmail.com",
    "FromName": "Yapplr",
    "AccessKey": "",
    "SecretKey": ""
  },
  "SendGridSettings": {
    "ApiKey": "",
    "FromEmail": "your-email@gmail.com",
    "FromName": "Yapplr"
  },
  "EmailProvider": "Console",
  "NotificationProviders": {
    "Firebase": {
      "Enabled": true,
      "ProjectId": "yapplr-bd41a"
    },
    "SignalR": {
      "Enabled": true,
      "MaxConnectionsPerUser": 10,
      "MaxTotalConnections": 10000,
      "CleanupIntervalMinutes": 30,
      "InactivityThresholdHours": 1,
      "EnableDetailedErrors": false
    },
    "Expo": {
      "Enabled": true
    }
  },
  "ContentModeration": {
    "ServiceUrl": "http://content-moderation:8000",
    "Enabled": true,
    "RequireReviewThreshold": 0.5,
    "AutoHideThreshold": 0.8
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "VirtualHost": "/"
  },
  "Cors": {
    "AllowFrontend": {
      "AllowedOrigins": [
        "https://yapplr.com",
        "https://www.yapplr.com",
        "https://app.yapplr.com"
      ],
      "AllowAnyHeader": true,
      "AllowAnyMethod": true,
      "AllowCredentials": true
    },
    "AllowSignalR": {
      "AllowedOrigins": [
        "https://yapplr.com",
        "https://www.yapplr.com",
        "https://app.yapplr.com"
      ],
      "AllowAnyHeader": true,
      "AllowAnyMethod": true,
      "AllowCredentials": true
    },
    "AllowAll": {
      "AllowedOrigins": [
        "https://yapplr.com",
        "https://www.yapplr.com",
        "https://app.yapplr.com"
      ],
      "AllowAnyOrigin": false,
      "AllowAnyHeader": true,
      "AllowAnyMethod": true,
      "AllowCredentials": true
    }
  },
  "UserCache": {
    "ExpirationSeconds": 5,
    "MaxSize": 5000
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "InfluxDB": {
    "Url": "http://localhost:8086",
    "Organization": "yapplr",
    "Bucket": "analytics",
    "Enabled": true
  },
  "Analytics": {
    "EnableDualWrite": true,
    "UseInfluxForAdminDashboard": true
  },
  "FrontendUrls": {
    "BaseUrl": "https://yapplr.com",
    "VerifyEmailPath": "/verify-email"
  },
  "Uploads": {
    "BasePath": "../uploads",
    "VideosPath": "videos",
    "ProcessedPath": "processed",
    "ThumbnailsPath": "thumbnails"
  },
  "TrustScoreBackground": {
    "RunInterval": "06:00:00",
    "EnableInactivityDecay": true,
    "InactivityDays": 30,
    "DecayRate": 0.005,
    "EnablePeriodicRecalculation": true,
    "RecalculationBatchSize": 50,
    "EnableStatisticsLogging": true,
    "EnableLowTrustScoreAlerts": true,
    "LowTrustScoreThreshold": 0.3,
    "LowTrustScoreAlertLimit": 10
  },
  "RateLimiting": {
    "Enabled": true,
    "TrustBasedEnabled": true,
    "BurstProtectionEnabled": true,
    "AutoBlockingEnabled": true,
    "AutoBlockViolationThreshold": 15,
    "AutoBlockDurationHours": 2,
    "ApplyToAdmins": false,
    "ApplyToModerators": false,
    "FallbackMultiplier": 1.0
  }
}
