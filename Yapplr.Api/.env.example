# Database Configuration
DATABASE_CONNECTION_STRING=Host=your-db-host;Port=5432;Database=yapplr_db;Username=your-username;Password=your-password

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-that-should-be-at-least-32-characters-long-for-production

# AWS SES Configuration
AWS_SES_REGION=us-east-1
AWS_SES_FROM_EMAIL=noreply@yourdomain.com
AWS_SES_ACCESS_KEY=your-aws-access-key
AWS_SES_SECRET_KEY=your-aws-secret-key

# SSL Certificate Configuration
DOMAIN_NAME=yourdomain.com
CERTBOT_EMAIL=admin@yourdomain.com

# Firebase Backend Configuration (REQUIRED for notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# Firebase Frontend Configuration (REQUIRED for web notifications)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id
FIREBASE_VAPID_KEY=your-vapid-key

# Optional: Custom database settings for local development
POSTGRES_DB=yapplr_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
