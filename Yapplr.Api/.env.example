# Database Configuration
PROD_DATABASE_CONNECTION_STRING=Host=your-db-host;Port=5432;Database=yapplr_db;Username=your-username;Password=your-password

# JWT Configuration
PROD_JWT_SECRET_KEY=your-super-secret-jwt-key-that-should-be-at-least-32-characters-long-for-production

# SSL Certificate Configuration
PROD_CERTBOT_DOMAIN=yourdomain.com
PROD_CERTBOT_EMAIL=admin@yourdomain.com

# Firebase Backend Configuration (REQUIRED for notifications)
PROD_FIREBASE_PROJECT_ID=your-firebase-project-id
PROD_FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# Note: Frontend Firebase variables removed - frontend now uses SignalR-only
# Firebase is only used in the API for mobile push notifications

# Optional: Custom database settings for local development
POSTGRES_DB=yapplr_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
