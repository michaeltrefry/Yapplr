{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=yapplr_dev;Username=postgres;Password=YOUR_PASSWORD"
  },
  "AwsSesSettings": {
    "Region": "us-east-1",
    "FromEmail": "your-email@example.com",
    "FromName": "Yapplr",
    "AccessKey": "YOUR_AWS_ACCESS_KEY",
    "SecretKey": "YOUR_AWS_SECRET_KEY"
  },
  "SendGridSettings": {
    "ApiKey": "YOUR_SENDGRID_API_KEY",
    "FromEmail": "support@yourapp.com",
    "FromName": "Your App Support"
  },
  "NotificationProviders": {
    "Firebase": {
      "Enabled": true,
      "ProjectId": "your-firebase-project-id",
      "ServiceAccountKeyFile": "firebase-service-account.json"
    },
    "SignalR": {
      "Enabled": true
    }
  },
  "ContentModeration": {
    "ServiceUrl": "http://localhost:8000"
  },
  "RabbitMQ": {
    "Host": "localhost",
    "Port": 5672,
    "Username": "yapplr",
    "Password": "yapplr123",
    "VirtualHost": "/"
  },
  "Cors": {
    "AllowFrontend": {
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:5173",
        "http://127.0.0.1:3000",
        "http://127.0.0.1:5173"
      ],
      "AllowAnyHeader": true,
      "AllowAnyMethod": true,
      "AllowCredentials": true
    },
    "AllowSignalR": {
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:5173",
        "http://127.0.0.1:3000",
        "http://127.0.0.1:5173"
      ],
      "AllowAnyHeader": true,
      "AllowAnyMethod": true,
      "AllowCredentials": true
    },
    "AllowAll": {
      "AllowedOrigins": [
        "http://localhost:3000",
        "http://localhost:5173",
        "http://127.0.0.1:3000",
        "http://127.0.0.1:5173"
      ],
      "AllowAnyOrigin": false,
      "AllowAnyHeader": true,
      "AllowAnyMethod": true,
      "AllowCredentials": true
    }
  },
  "FrontendUrls": {
    "BaseUrl": "http://localhost:3000",
    "VerifyEmailPath": "/verify-email"
  },
  "Redis": {
    "ConnectionString": "localhost:6380"
  },
  "InfluxDB": {
    "Url": "http://influxdb:8086",
    "Token": "yapplr-analytics-token-local-dev-only",
    "Organization": "yapplr",
    "Bucket": "analytics",
    "Enabled": true
  },
  "Analytics": {
    "EnableDualWrite": true
  }
